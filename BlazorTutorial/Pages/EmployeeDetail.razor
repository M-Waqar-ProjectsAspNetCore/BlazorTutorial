@page "/employeedetail/{Id}"

@inherits EmployeeDetailBase

<h3>Employee Detail</h3>
<hr />

<div class="container">
    <div class="card">
        <div class="card-header">
            <h3>@Employee.FirstName @Employee.LastName - @Cordinates</h3>
        </div>
        <div class="card-body">
            <img @onmousemove="@MouseMove" class="card-img-top" src="@(Employee.PhotoPath == null ? "images/nophoto.jpg" : Employee.PhotoPath)" />
            <div>
                <h4>Employee ID : @Employee.Id</h4>
                <h4>Email : @Employee.Email</h4>
                <h4>Phone : @Employee.PhoneNumber</h4>
                <h4>Designation : @Employee.Designation</h4>
            </div>
            <button @onclick="@NavigateBtn" class="btn btn-primary">@BtnText</button>
        </div>
        <div class="card-footer text-center @CssHide">
            <a href="/employees" class="btn btn-primary">Back</a>
            <a href="@($"editemployee/{Employee.Id}")" class="btn btn-primary">Edit</a>
            <button @onclick="DeleteClick" class="btn btn-danger">Delete</button>
        </div>
    </div>
</div>

<ConfirmComp @ref="DeleteConfirmation"
             ConfirmationTitle="Delete Employee" 
             ConfirmationMessage="@($"Are you sure you want to delete {Employee.FirstName}")"
             ConfirmationChanged="DeleteConfirmed">
</ConfirmComp>
